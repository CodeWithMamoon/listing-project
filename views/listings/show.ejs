<% layout('layouts/boilerplate') %>

<h1>All Listings</h1>

    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-3">
        <% for(let listing of listings) { %>
                <a href="/listing/<%= listing._id %>" class="listing-link">
                    <div class="card col" style="width: 20rem;">
                        <img src="<%= listing.image %>" class="card-img-top" alt="Listing Image" style="height: 20rem;">
                        <div class="card-body">
                            <h5 class="card-title mt-3"><%= listing.title %></h5>
                            <p class="card-text"><strong>Price:</strong> <%= listing.price %></p>
                        </div>
                    </div>
                </a>
        <% } %>
    </div>
